<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= docTitle %></title>
    <link rel="stylesheet" href="/css/bootstrap.min.css" />

</head>

<% var activeShop,activeAddProduct,activeProductList,activeCart,activeCheckout,activeProductManage,breadcrumb,isAuthenicated; %>

<body>
    <header class="main-header">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" href="/">NodeJs商城</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav"
                aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item <% if(activeShop){%>active<%}%>">
                        <a class="nav-link" href="/">商城</a>
                    </li>

                    <li class="nav-item <% if(activeProductList){%>active<%}%>">
                        <a class="nav-link" href="/product-list">產品列表</a>
                    </li>

                    <% if(isAuthenicated){ %>
                    <li class=" nav-item <% if(activeCart){%>active<%}%>">
                        <a class="nav-link" href="/cart">購物車</a>
                    </li>

                    <li class="nav-item <% if(activeCheckout){%>active<%}%>">
                        <a class="nav-link" href="/checkout">訂單管理</a>
                    </li>

                    <li class=" nav-item <% if(activeAddProduct){%>active<%}%>">
                        <a class="nav-link" href="/admin/add-product">添加產品</a>
                    </li>

                    <li class="nav-item <% if(activeProductManage){%>active<%}%>">
                        <a class="nav-link" href="/admin/products">產品管理</a>
                    </li>
                <% } %> </ul>

                        <% if(!isAuthenicated){ %>
                        <a href="/login" class="btn btn-outline-success">登入</a>
                        <a href="/signup" class="btn btn-outline-primary ml-2">註冊</a>

                        <% } else { %>
                        <form action="/logout" method="post">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                            <button class="btn btn-danger ml-2" type="submit">退出</button>
                        </form>
                        <% } %>


            </div>
        </nav>

    </header>

    <% if(breadcrumb){%>
    <%- include('./breadcrumb.ejs') %>
    <%}%>
    <main class=" container p-5">