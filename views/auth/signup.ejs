<%- include('../includes/header.ejs')%>

<form class="signup-form" action="/signup" method="post" novalidate>
    <%- include('../includes/error-message.ejs') %>

    <div class="form-group">
        <label for="email">電子郵件地址</label>
        <input type="email" class="form-control <%= validationErrors.find(e=>e.params==='email')?'is-valid' %>"
            id="email" name="email" aria-describedby="emailHelp" required value="<%= oldInput.email %>">
        <small id="emailHelp" class="form-text text-muted">請輸入電子郵件地址</small>
    </div>

    <div class="form-group">
        <label for="password">用户密碼</label>
        <input type="password" class="form-control <%= validationErrors.find(e=>e.params==='password')?'is-valid' %>"
            id="password" name="password" aria-describedby="passwordHelp" value="<%= oldInput.password %>">
        <small id="passwordHelp" class="form-text text-muted">請輸入用户密碼</small>
    </div>

    <div class="form-group">
        <label for="confirmPassword">重复密碼</label>
        <input type="password"
            class="form-control <%= validationErrors.find(e=>e.params==='confirmPassword')?'is-valid' %>"
            id="confirmPassword" name="confirmPassword" aria-describedby="confirmPasswordHelp"
            value="<%= oldInput.confirmPassword %>">
        <small id="confirmPasswordHelp" class="form-text text-muted">請再次輸入密碼</small>
    </div>

    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
    <button type="submit" class="btn btn-primary">註冊</button>
</form>



<%- include('../includes/footer.ejs')%>